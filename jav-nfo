#!/usr/bin/env python3
"""
JAV NFO Generator - Global executable script
Add this script to your PATH for global usage
"""

import os
import sys

# Add the project directory to Python path
project_dir = os.path.dirname(os.path.abspath(__file__))
sys.path.insert(0, project_dir)

